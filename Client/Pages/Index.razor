@page "/"

<p>Hello, @CustomToUpper(name)</p>

<p> Add two numbers - 2 + 2 = @(2 + 2)</p>

<button @onclick="@WriteInLog">Click me</button>
@code{
    string name = "Yarik";

    string CustomToUpper(string value) => value.ToUpper();

    void WriteInLog()
    {
        Console.WriteLine("I've been clicked. (from method)");
    }
}